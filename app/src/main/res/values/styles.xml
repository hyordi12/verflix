<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/celeste</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/fond</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="SplashTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/midcent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WelcomeTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bienve</item>
        <item name="android:buttonStyle">@style/WelcomeButton</item>
        <item name="android:textViewStyle">@style/WelcomeTextView</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="WelcomeButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/buttonColor</item>
        <item name="android:textColor">@color/celeste</item>
        <item name="android:fontFamily">@font/bebas</item>
    </style>


    <style name="WelcomeTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/celeste</item>
        <item name="android:fontFamily">@font/bebas</item>
    </style>

    <style name="CategoriasTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/categ</item>
        <item name="android:fontFamily">@font/bebas</item>
        <item name="android:textColor">@color/celeste</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="VideoTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/vid</item>
        <item name="android:textColor">@color/celeste</item>
        <item name="android:fontFamily">@font/bebas</item>
        <item name="buttonStyle">@style/CustomButton</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/buttonColor</item>
        <item name="android:textColor">@color/celeste</item>
        <item name="android:fontFamily">@font/bebas</item>
    </style>

</resources>
